<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/css/main.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
    <link rel="shortcut icon" type="image/png" href="{{ '/img/ico/icono.png' | url }}"/>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css" integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
  </head>
  <body>
    <header>
      <div class="nav-header">
        <h1 class="home"><a href="{{ '/' | url }}"><img src="{{ '/img/ico/sitelogo.svg' | url }}" id="site-logo">{{ metadata.title }}</a></h1>

        <i class="fas fa-bars" id="menu-hamburguer" onClick=Hamburguer()></i>

        <ul class="nav" id="navegacion">
          <li><a href="{{ '/' | url }}">Inicio</a></li>
          <li><a onClick=Menu() >Eneatipos <i class="fas fa-chevron-down"></i></a>
            <ul id="submenu-1" class="submenu-hidden">
            {%- for info in collections.informacion -%}
                <li><a href="{{ info.url }}" class="subitem">{{ info.data.title }}</a></li>
            {%- endfor -%}
            </ul>
          </li>
          <li><a href="{{ '/posts/' | url }}">Blog</a></li>
          <li class="test-in-menu"><a href="">Test</a></li>
          <li id="search-item"><a><i class="fas fa-search"></i></a></li>
        </ul>
      
      </div>
      
    </header>

    <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
      {{ content | safe }}
    </main>

    <footer>
      <div class="foot">
        <div class="foot-bar">
          <ul class="footerlist">
            <li>Sobre Mí</li>
            <li>Test</li>
            <li>Suscribirse</li>
            <li>Privacidad</li>
          </ul>
          <ul class="footerlist">
            <li><i class="fab fa-facebook-square"></i></li>
            <li><i class="fab fa-instagram"></i></li>
            <li><i class="fab fa-twitter"></i></li>
            <li><i class="fab fa-youtube"></i></li>
          </ul>
          </div>
                
          <p class="foot-below">© 2020 Creado por Emiliano en Eleventy JS</p>
        </div>
    </footer>

    <!-- Current page: {{ page.url | url }} -->
    <script src="{{ '/css/main.js' | url }}"></script>
  </body>
</html>
